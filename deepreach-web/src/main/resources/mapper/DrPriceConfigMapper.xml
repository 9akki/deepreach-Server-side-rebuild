<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.deepreach.web.mapper.DrPriceConfigMapper">

    <resultMap id="DrPriceConfigResult" type="DrPriceConfig">
        <result property="priceId" column="price_id"/>
        <result property="businessType" column="business_type"/>
        <result property="businessName" column="business_name"/>
        <result property="priceUnit" column="price_unit"/>
        <result property="drPrice" column="dr_price"/>
        <result property="billingType" column="billing_type"/>
        <result property="status" column="status"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="createBy" column="create_by"/>
        <result property="updateBy" column="update_by"/>
        <result property="remark" column="remark"/>
    </resultMap>

    <sql id="selectDrPriceConfigVo">
        select price_id, business_type, business_name, price_unit, dr_price, billing_type, status, create_time, update_time, create_by, update_by, remark
        from dr_price_config
    </sql>

    <select id="selectDrPriceConfigList" parameterType="DrPriceConfig" resultMap="DrPriceConfigResult">
        <include refid="selectDrPriceConfigVo"/>
        <where>
            <if test="businessType != null  and businessType != ''"> and business_type = #{businessType}</if>
            <if test="businessName != null  and businessName != ''"> and business_name like concat('%', #{businessName}, '%')</if>
            <if test="priceUnit != null  and priceUnit != ''"> and price_unit = #{priceUnit}</if>
            <if test="drPrice != null "> and dr_price = #{drPrice}</if>
            <if test="billingType != null "> and billing_type = #{billingType}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
        order by create_time desc
    </select>

    <select id="selectDrPriceConfigPage" parameterType="DrPriceConfig" resultMap="DrPriceConfigResult">
        <include refid="selectDrPriceConfigVo"/>
        <where>
            <if test="businessType != null  and businessType != ''"> and business_type = #{businessType}</if>
            <if test="businessName != null  and businessName != ''"> and business_name like concat('%', #{businessName}, '%')</if>
            <if test="priceUnit != null  and priceUnit != ''"> and price_unit = #{priceUnit}</if>
            <if test="drPrice != null "> and dr_price = #{drPrice}</if>
            <if test="billingType != null "> and billing_type = #{billingType}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
        order by create_time desc
    </select>

    <select id="selectDrPriceConfigByPriceId" parameterType="Long" resultMap="DrPriceConfigResult">
        <include refid="selectDrPriceConfigVo"/>
        where price_id = #{priceId}
    </select>

    <select id="selectDrPriceConfigByBusinessType" parameterType="String" resultMap="DrPriceConfigResult">
        <include refid="selectDrPriceConfigVo"/>
        where business_type = #{businessType}
    </select>

    <select id="selectDrPriceConfigByStatus" parameterType="String" resultMap="DrPriceConfigResult">
        <include refid="selectDrPriceConfigVo"/>
        where status = #{status}
        order by create_time desc
    </select>

    <select id="selectDrPriceConfigByBillingType" parameterType="Integer" resultMap="DrPriceConfigResult">
        <include refid="selectDrPriceConfigVo"/>
        where billing_type = #{billingType}
        order by create_time desc
    </select>

    <select id="selectActivePriceConfigs" resultMap="DrPriceConfigResult">
        <include refid="selectDrPriceConfigVo"/>
        where status = '0'
        order by create_time desc
    </select>

    <insert id="insertDrPriceConfig" parameterType="DrPriceConfig" useGeneratedKeys="true" keyProperty="priceId">
        insert into dr_price_config
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="businessType != null and businessType != ''">business_type,</if>
            <if test="businessName != null and businessName != ''">business_name,</if>
            <if test="priceUnit != null and priceUnit != ''">price_unit,</if>
            <if test="drPrice != null">dr_price,</if>
            <if test="billingType != null">billing_type,</if>
            <if test="status != null">status,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="createBy != null">create_by,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="businessType != null and businessType != ''">#{businessType},</if>
            <if test="businessName != null and businessName != ''">#{businessName},</if>
            <if test="priceUnit != null and priceUnit != ''">#{priceUnit},</if>
            <if test="drPrice != null">#{drPrice},</if>
            <if test="billingType != null">#{billingType},</if>
            <if test="status != null">#{status},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateDrPriceConfig" parameterType="DrPriceConfig">
        update dr_price_config
        <trim prefix="SET" suffixOverrides=",">
            <if test="businessType != null and businessType != ''">business_type = #{businessType},</if>
            <if test="businessName != null and businessName != ''">business_name = #{businessName},</if>
            <if test="priceUnit != null and priceUnit != ''">price_unit = #{priceUnit},</if>
            <if test="drPrice != null">dr_price = #{drPrice},</if>
            <if test="billingType != null">billing_type = #{billingType},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where price_id = #{priceId}
    </update>

    <update id="updateStatus">
        update dr_price_config
        set status = #{status}, update_time = sysdate()
        where price_id = #{priceId}
    </update>

    <update id="batchUpdateStatus">
        update dr_price_config
        set status = #{status}, update_time = sysdate()
        where price_id in
        <foreach collection="priceIds" item="priceId" open="(" separator="," close=")">
            #{priceId}
        </foreach>
    </update>

    <delete id="deleteDrPriceConfigByPriceId" parameterType="Long">
        delete from dr_price_config where price_id = #{priceId}
    </delete>

    <delete id="deleteDrPriceConfigByPriceIds" parameterType="String">
        delete from dr_price_config where price_id in
        <foreach item="priceId" collection="array" open="(" separator="," close=")">
            #{priceId}
        </foreach>
    </delete>

    <select id="checkBusinessTypeUnique" resultType="int">
        select count(1) from dr_price_config
        where business_type = #{businessType}
        <if test="excludePriceId != null">
            and price_id != #{excludePriceId}
        </if>
    </select>

</mapper>